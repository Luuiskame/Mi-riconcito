---



<section id="features" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <!-- <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
        Powerful Features
      </span> -->
      <h2 class="mb-6 text-gray-900 dark:text-white">
        {translateLabels('featuresTitle')}
      </h2>
      <p class="text-gray-600 dark:text-gray-300">
        {translateLabels('featuresDescription')}
      </p>
      <div class="mt-6">
        <div class="inline-block h-1.5 w-20 bg-purple-500 rounded-full"></div>
        <div class="inline-block h-1.5 w-10 bg-pink-500 rounded-full ml-2"></div>
        <div class="inline-block h-1.5 w-6 bg-blue-500 rounded-full ml-2"></div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        features.map((feature, index) => {
          const cardContent = (
            <>
              <div
                class={`w-12 h-12 rounded-lg ${feature.iconColor} flex items-center justify-center mx-auto`}
              >
                <svg
                  class={`w-12 h-12 ${feature.iconColor} dark:${feature.iconColor} mb-6 flex justify-center mx-auto`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={feature.icon}
                  />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">
                {feature.title}
              </h3>
              <p class="text-gray-600">
                {feature.description}
              </p>
            </>
          );

          return feature.title === translateLabels('featuresExplorar') ? (
            <a
              href="https://www.teacherspayteachers.com/store/mi-rinconcito-creativo"
              target="_blank"
              rel="noopener noreferrer"
              class={`${feature.bgColor} rounded-2xl p-8 transform transition-all duration-300 ${feature.hoverColor} cursor-pointer shadow-lg hover:-translate-y-1 border-2 border-dashed border-${feature.hoverColor} block`}
              style={`animation-delay: ${index * 100}ms `}
            >
              {cardContent}
            </a>
          ) : (
            <div
              class={`${feature.bgColor} rounded-2xl p-8 transform transition-all duration-300 ${feature.hoverColor} cursor-pointer shadow-lg hover:-translate-y-1 border-2 border-dashed border-${feature.hoverColor}`}
              style={`animation-delay: ${index * 100}ms `}
            >
              {cardContent}
            </div>
          );
        })
      }
    </div>
  </div>
</section>
