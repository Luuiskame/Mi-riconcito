
---
---
<section class="relative pt-32 pb-20 md:pt-40 overflow-hidden hero-section">
  <div class="container-custom relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="slide-up" transition:animate="slide">
        <h1 class="mb-6 text-secondary-900 dark:text-white leading-tight">
          <span class="text-primary-600 dark:text-primary-400">Bilingual</span> Educational Materials<br>
          for Early Childhood
        </h1>
        <p class="text-xl text-secondary-600 dark:text-secondary-300 mb-8 max-w-lg">
          Handcrafted resources to support early literacy, creativity, and culturally responsive teaching
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="https://www.teacherspayteachers.com/store/mi-rinconcito-creativo" class="btn-primary">
            Explore Materials
          </a>
          <a href="/contact" class="btn-outline flex items-center">
            Contact me
          </a>
        </div>
      </div>
      
      <div class="relative fade-in" transition:animate="fade">
        <!-- Animated Educational Materials SVG Hero Image -->
        <div class="w-full max-w-lg mx-auto">
          <svg viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto drop-shadow-xl">
            <!-- Background elements with animations -->
            <circle cx="400" cy="300" r="250" fill="#f0f9ff" class="dark:fill-slate-800 animate-pulse" style="animation-duration: 8s;" />
            <circle cx="550" cy="180" r="60" fill="#bae6fd" class="dark:fill-teal-800 animate-pulse" opacity="0.6" style="animation-duration: 5s;" />
            <circle cx="200" cy="400" r="80" fill="#e0f2fe" class="dark:fill-slate-700 animate-pulse" opacity="0.7" style="animation-duration: 6s;" />
            
            <!-- Decorative elements with animations -->
            <circle cx="400" cy="300" r="220" stroke="#5FCCC4" stroke-width="5" fill="none" class="dark:stroke-teal-500" stroke-dasharray="15,10">
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                from="0 400 300" 
                to="360 400 300" 
                dur="30s" 
                repeatCount="indefinite" 
              />
            </circle>
            
            <!-- Stack of books -->
            <g class="book-stack">
              <!-- Book 1 (bottom) -->
              <rect x="280" y="350" width="240" height="40" rx="5" fill="#FF8A6B" class="dark:fill-red-600">
                <animate 
                  attributeName="width" 
                  values="240;245;240" 
                  dur="5s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <!-- Book spine -->
              <rect x="280" y="335" width="240" height="15" rx="2" fill="#e87c61" class="dark:fill-red-700" />
              <!-- Book 2 -->
              <rect x="300" y="305" width="220" height="45" rx="5" fill="#5FCCC4" class="dark:fill-teal-600">
                <animate 
                  attributeName="width" 
                  values="220;225;220" 
                  dur="6s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <!-- Book spine -->
              <rect x="300" y="290" width="220" height="15" rx="2" fill="#4eb8b1" class="dark:fill-teal-700" />
              <!-- Book 3 -->
              <rect x="270" y="260" width="240" height="30" rx="5" fill="#FFD166" class="dark:fill-yellow-600">
                <animate 
                  attributeName="width" 
                  values="240;245;240" 
                  dur="7s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <!-- Book spine -->
              <rect x="270" y="245" width="240" height="15" rx="2" fill="#e6bc5c" class="dark:fill-yellow-700" />
              <!-- Book 4 (top) -->
              <rect x="290" y="215" width="180" height="30" rx="5" fill="#A17EE6" class="dark:fill-purple-600">
                <animate 
                  attributeName="width" 
                  values="180;185;180" 
                  dur="5.5s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <!-- Book spine -->
              <rect x="290" y="200" width="180" height="15" rx="2" fill="#8f6fcf" class="dark:fill-purple-700" />
              
              <!-- Bookmark -->
              <path d="M420 200 L440 200 L430 230 Z" fill="#75C1F0" class="dark:fill-blue-500">
                <animate 
                  attributeName="d" 
                  values="M420 200 L440 200 L430 230 Z;
                          M420 200 L440 200 L430 235 Z;
                          M420 200 L440 200 L430 230 Z" 
                  dur="4s" 
                  repeatCount="indefinite" 
                />
              </path>
            </g>
            
            <!-- Alphabet blocks with text -->
            <g class="alphabet-blocks">
              <!-- Block 1 -->
              <rect x="160" y="320" width="60" height="60" rx="5" fill="#FF8A6B" class="dark:fill-red-600">
                <animateTransform 
                  attributeName="transform" 
                  type="rotate" 
                  values="0 190 350; 5 190 350; 0 190 350" 
                  dur="3s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <text x="180" y="360" font-family="Arial" font-size="30" fill="white" text-anchor="middle" font-weight="bold">A</text>
              
              <!-- Block 2 -->
              <rect x="200" y="270" width="60" height="60" rx="5" fill="#5FCCC4" class="dark:fill-teal-600">
                <animateTransform 
                  attributeName="transform" 
                  type="rotate" 
                  values="0 230 300; -5 230 300; 0 230 300" 
                  dur="4s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <text x="220" y="310" font-family="Arial" font-size="30" fill="white" text-anchor="middle" font-weight="bold">B</text>
              
              <!-- Block 3 -->
              <rect x="510" y="290" width="60" height="60" rx="5" fill="#FFD166" class="dark:fill-yellow-600">
                <animateTransform 
                  attributeName="transform" 
                  type="rotate" 
                  values="0 540 320; 5 540 320; 0 540 320" 
                  dur="3.5s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <text x="530" y="330" font-family="Arial" font-size="30" fill="white" text-anchor="middle" font-weight="bold">C</text>
              
              <!-- Block 4 with Spanish letter -->
              <rect x="570" y="360" width="60" height="60" rx="5" fill="#A17EE6" class="dark:fill-purple-600">
                <animateTransform 
                  attributeName="transform" 
                  type="rotate" 
                  values="0 600 390; -5 600 390; 0 600 390" 
                  dur="4.5s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <text x="590" y="400" font-family="Arial" font-size="30" fill="white" text-anchor="middle" font-weight="bold">Ñ</text>
            </g>
            
            <!-- Floating pencil -->
            <g class="pencil">
              <rect x="500" y="200" width="120" height="20" rx="2" fill="#FFD166" class="dark:fill-yellow-600">
                <animateTransform 
                  attributeName="transform" 
                  type="rotate" 
                  values="0 560 220; 10 560 220; 0 560 220; -10 560 220; 0 560 220" 
                  dur="8s" 
                  repeatCount="indefinite" 
                />
              </rect>
              <polygon points="620,200 620,220 640,210" fill="#FF8A6B" class="dark:fill-red-600">
                <animateTransform 
                  attributeName="transform" 
                  type="rotate" 
                  values="0 560 220; 10 560 220; 0 560 220; -10 560 220; 0 560 220" 
                  dur="8s" 
                  repeatCount="indefinite" 
                />
              </polygon>
              <rect x="480" y="200" width="20" height="20" fill="#5FCCC4" class="dark:fill-teal-600">
                <animateTransform 
                  attributeName="transform" 
                  type="rotate" 
                  values="0 560 220; 10 560 220; 0 560 220; -10 560 220; 0 560 220" 
                  dur="8s" 
                  repeatCount="indefinite" 
                />
              </rect>
            </g>
            
            <!-- Floating letters with animation -->
            <text x="170" y="180" font-family="Arial" font-size="24" fill="#5FCCC4" class="dark:fill-teal-400" font-weight="bold">
              a
              <animate 
                attributeName="y" 
                values="180;170;180" 
                dur="3s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="opacity" 
                values="0.7;1;0.7" 
                dur="3s" 
                repeatCount="indefinite" 
              />
            </text>
            
            <text x="600" y="160" font-family="Arial" font-size="26" fill="#FF8A6B" class="dark:fill-red-400" font-weight="bold">
              b
              <animate 
                attributeName="y" 
                values="160;150;160" 
                dur="4s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="opacity" 
                values="0.7;1;0.7" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </text>
            
            <text x="480" y="140" font-family="Arial" font-size="30" fill="#FFD166" class="dark:fill-yellow-400" font-weight="bold">
              c
              <animate 
                attributeName="y" 
                values="140;130;140" 
                dur="5s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="opacity" 
                values="0.7;1;0.7" 
                dur="5s" 
                repeatCount="indefinite" 
              />
            </text>
            
            <!-- Spanish letters -->
            <text x="380" y="120" font-family="Arial" font-size="28" fill="#A17EE6" class="dark:fill-purple-400" font-weight="bold">
              ñ
              <animate 
                attributeName="y" 
                values="120;110;120" 
                dur="3.5s" 
                repeatCount="indefinite" 
              />
              <animate 
                attributeName="opacity" 
                values="0.7;1;0.7" 
                dur="3.5s" 
                repeatCount="indefinite" 
              />
            </text>
            
            <!-- Floating stars -->
            <path d="M300,450 L310,430 L320,450 L340,455 L320,470 L325,490 L310,480 L295,490 L300,470 L280,455 Z" fill="#FFD166" class="dark:fill-yellow-400" opacity="0.8">
              <animate 
                attributeName="opacity" 
                values="0.8;0.4;0.8" 
                dur="3s" 
                repeatCount="indefinite" 
              />
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                values="0 310 460; 10 310 460; 0 310 460" 
                dur="4s" 
                repeatCount="indefinite" 
              />
            </path>
            
            <path d="M500,400 L510,380 L520,400 L540,405 L520,420 L525,440 L510,430 L495,440 L500,420 L480,405 Z" fill="#5FCCC4" class="dark:fill-teal-400" opacity="0.7">
              <animate 
                attributeName="opacity" 
                values="0.7;0.3;0.7" 
                dur="4s" 
                repeatCount="indefinite" 
              />
              <animateTransform 
                attributeName="transform" 
                type="rotate" 
                values="0 510 410; -10 510 410; 0 510 410" 
                dur="5s" 
                repeatCount="indefinite" 
              />
            </path>
          </svg>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom section with highlighted features -->
  <div class="mt-10 w-full overflow-hidden -z-10" transition:animate="slide">
    <div class="relative bg-teal-400 dark:bg-teal-500 py-12 md:py-16">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <div class="text-3xl md:text-4xl font-bold text-black dark:text-black">
              Creative <span class="bg-accent-400 px-2 py-1">bilingual</span> materials for early childhood education
            </div>
          </div>
          
          <div class="flex flex-col items-start md:items-end justify-center">
            <p class="text-sm uppercase tracking-wider text-teal-800 dark:text-teal-800 font-medium mb-4">FEATURED MATERIALS</p>
            <div class="flex flex-wrap justify-start md:justify-end gap-x-8 gap-y-4">
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">Flannel Stories</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">Alphabet Sets</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">Cultural Activities</span>
              </div>
              <div class="h-8 flex items-center">
                <span class="text-black dark:text-black font-medium">Printables</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Add keyframes for additional animations if needed */
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  /* Apply floating animation to the entire SVG container */
  .fade-in svg {
    animation: float 6s ease-in-out infinite;
  }
</style>
